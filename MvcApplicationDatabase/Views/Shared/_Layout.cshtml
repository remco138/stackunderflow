@{
string activeCtrl = ViewContext.RouteData.Values["controller"].ToString().ToLower();
string activeAct = ViewContext.RouteData.Values["action"].ToString().ToLower();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@(activeCtrl == "home" ? "" : ViewBag.Title + " - ")Stack Underflow</title>
    <link rel="shortcut icon" type="image/png" href="~/Content/themes/layout/favicon.png" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="user">
        <div class="wrapper">
            <p><a href="#">Username</a> <input type="text" size="30" name="search" placeholder="search" /></p>
        </div>
    </div>
    <div class="wrapper">
        <div id="logo"><a href="/"><img src="~/Content/themes/layout/logo.png" alt="logo" /></a></div>
        <div id="navigation">
            <ul>
                <li@(activeCtrl.Equals("question") && activeAct.Equals("Index") ? " class=active" : "")>@Html.ActionLink("Questions", "Index", "Question")</li>
                <li@(activeCtrl.Equals("tags") ? " class=active" : "")>@Html.ActionLink("Tags", "Index", "Tags")</li>
                <li@(activeCtrl.Equals("user") ? " class=active" : "")>@Html.ActionLink("Users", "Index", "User")</li>
                <li@(activeCtrl.Equals("badges") ? " class=active" : "")>@Html.ActionLink("Badges", "Index", "Badges")</li>
                <li@(activeCtrl.Equals("question") && activeAct.Equals("Ask")  ? " class=active" : "")>@Html.ActionLink("Ask Question", "Ask", "Question")</li>
            </ul>
        </div>
        <div class="clear"></div>
        <div id="content">
            @RenderBody()
        </div>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
