@model IEnumerable<MvcApplicationDatabase.Models.Tag>
@{
    ViewBag.Title = "Top tags";
}

    @Scripts.Render("~/Scripts/jquery-1.7.1.js")
    @Scripts.Render("~/Scripts/jquery-ui-1.8.20.js")
 
 <script>
  $(function() {
      $("#dialog").dialog();

      $(".edit-tag").click(function (e) {
          $("#dialog").dialog();
          e.preventDefault();
      });
  });
  </script>

<div id="dialog" hidden title="Basic dialog">
  <p>This is the default dialog which is useful for displaying information. The dialog window can be moved, resized and closed with the 'x' icon.</p>
</div>


<h2>@ViewBag.Title</h2>

<div class="tag-list">
    @foreach (var t in Model)
    {
        <div class="tag-item">
            <a href="@Html.Raw("/question/tagged/" + Uri.EscapeDataString(t.Name.ToLower()))" class="post-tag">@t.Name</a>  
            <span class="tag-excerpt"> 
                #@t.Questions.Count
                <a href class="edit-tag" >Edit</a>
                <br /> 
                @t.Summary
            </span>
        </div>
    }

    <div class="clear"></div>

</div>
